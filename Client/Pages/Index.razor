    async Task SuggestPerfectVacationWithOptions(RadzenSplitButtonItem args)
    {
        bool overwrite = false;
        bool planFromToday = false;

        switch (args.Value)
        {
            case "overwrite":
                overwrite = true;
                break;
            case "extend":
                overwrite = false;
                break;
            case "rest_of_year":
                overwrite = false;
                planFromToday = true;
                break;
        }

        if (_selectedSubdivisions == null || !_selectedSubdivisions.Any())
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Warning, Summary = "Hinweis", Detail = "Bitte wählen Sie mindestens ein Bundesland aus.", Duration = 4000 });
            return;
        }

        decimal vacationDaysToPlan = overwrite ? _totalVacationDays : _totalVacationDays - _plannedDays;

        if (vacationDaysToPlan <= 0)
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Warning, Summary = "Hinweis", Detail = "Die Anzahl der zu planenden Urlaubstage muss größer als 0 sein.", Duration = 4000 });
            return;
        }

        // 1. Get Preferences
        var preferences = await DialogService.OpenAsync<PlanningPreferencesDialog>("Planungs-Einstellungen", null,
            new DialogOptions { Width = "500px", Height = "auto", Resizable = false, Draggable = true });

        if (preferences == null) return; // User cancelled

        var prefs = (PlanningPreferencesDialog.PlanningPreferences)preferences;

        // 2. Prepare Data
        var year = FindMiddleDateTime(scheduler.SelectedView.StartDate, scheduler.SelectedView.EndDate).Year;
        var startDate = planFromToday ? new DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day) : new DateTime(year, 1, 1);
        var endDate = new DateTime(year, 12, 31);

        var holidaysApi = new HolidaysApi();
        var publicHolidaysResponse = await holidaysApi.PublicHolidaysGetAsync("DE", startDate, endDate, "DE");
        
        // Fetch school holidays if needed for preferences
        List<HolidayResponse> schoolHolidays = [];
        if (prefs.PreferSchoolHolidays || prefs.AvoidSchoolHolidays)
        {
             schoolHolidays = await holidaysApi.SchoolHolidaysGetAsync("DE", startDate, endDate, "DE");
        }

        var relevantPublicHolidays = publicHolidaysResponse
            .Where(p => p.Nationwide == true || (p.Subdivisions != null && p.Subdivisions.Any(s => _selectedSubdivisions.Any(sub => sub.Code == s.Code))))
            .SelectMany(h => Enumerable.Range(0, (h.EndDate.Value.Date - h.StartDate.Value.Date).Days + 1).Select(offset => h.StartDate.Value.Date.AddDays(offset)))
            .ToHashSet();

        // Map school holidays to a set of dates for easier checking
        var datesForPreference = new HashSet<DateTime>();
        var datesForAvoidance = new HashSet<DateTime>();

        if (schoolHolidays.Any())
        {
             // 1. For "Prefer" (always bound to selected subdivisions)
             datesForPreference = schoolHolidays
                .Where(sh => sh.Subdivisions != null && sh.Subdivisions.Any(s => _selectedSubdivisions.Any(sub => sub.Code == s.Code)))
                .SelectMany(h => Enumerable.Range(0, (h.EndDate.Value.Date - h.StartDate.Value.Date).Days + 1).Select(offset => h.StartDate.Value.Date.AddDays(offset)))
                .ToHashSet();

             // 2. For "Avoid"
             if (prefs.AvoidSchoolHolidays && prefs.AvoidAllStatesSchoolHolidays)
             {
                 // All states
                 datesForAvoidance = schoolHolidays
                    .SelectMany(h => Enumerable.Range(0, (h.EndDate.Value.Date - h.StartDate.Value.Date).Days + 1).Select(offset => h.StartDate.Value.Date.AddDays(offset)))
                    .ToHashSet();
             }
             else
             {
                 // Selected states only
                 datesForAvoidance = datesForPreference;
             }
        }

        var nonWorkDays = new HashSet<DateTime>();
        for (var date = startDate; date <= endDate; date = date.AddDays(1))
        {
            if (date.DayOfWeek == DayOfWeek.Saturday || date.DayOfWeek == DayOfWeek.Sunday || relevantPublicHolidays.Contains(date))
            {
                nonWorkDays.Add(date);
            }
        }

        // 3. Find Opportunities
        var opportunities = new List<BridgeOpportunity>();
        var currentDate = startDate;
        while (currentDate <= endDate)
        {
            if (!nonWorkDays.Contains(currentDate))
            {
                var periodStart = currentDate;
                var beforePeriod = periodStart.AddDays(-1);

                // Check for valid block start (either start of year or preceded by non-work day)
                if (nonWorkDays.Contains(beforePeriod) || periodStart == startDate)
                {
                    var workDays = new List<DateTime>();
                    var tempDate = periodStart;
                    while (!nonWorkDays.Contains(tempDate) && tempDate <= endDate)
                    {
                        workDays.Add(tempDate);
                        tempDate = tempDate.AddDays(1);
                    }

                    var afterPeriod = tempDate;
                    // Valid block end
                    if (nonWorkDays.Contains(afterPeriod) || afterPeriod > endDate)
                    {
                        // Calculate free days gained
                        var freeDaysBefore = 0;
                        var checkDateBefore = beforePeriod;
                        while (nonWorkDays.Contains(checkDateBefore) && checkDateBefore >= startDate)
                        {
                            freeDaysBefore++;
                            checkDateBefore = checkDateBefore.AddDays(-1);
                        }

                        var freeDaysAfter = 0;
                        var checkDateAfter = afterPeriod;
                        while (nonWorkDays.Contains(checkDateAfter) && checkDateAfter <= endDate)
                        {
                            freeDaysAfter++;
                            checkDateAfter = checkDateAfter.AddDays(1);
                        }

                        decimal cost = workDays.Sum(day => _halfDaysChristmas && IsBetweenChristmasAndNewYear(day) ? 0.5m : 1.0m);
                        
                        // --- Scoring Logic ---
                        double score = 0;
                        
                        // Base Efficiency
                        double efficiency = cost > 0 ? (workDays.Count + freeDaysBefore + freeDaysAfter) / (double)cost : 0;
                        score = efficiency * 10; // Base weight

                        // Filter by Duration
                        if (workDays.Count < prefs.MinDaysPerBlock) score = 0;
                        if (prefs.MaxDaysPerBlock.HasValue && workDays.Count > prefs.MaxDaysPerBlock.Value) score = 0;

                        // School Holiday Preference
                        if (score > 0)
                        {
                            if (prefs.PreferSchoolHolidays)
                            {
                                bool overlaps = workDays.Any(d => datesForPreference.Contains(d));
                                if (overlaps) score *= 1.5; // Boost
                            }
                            
                            if (prefs.AvoidSchoolHolidays)
                            {
                                bool overlaps = workDays.Any(d => datesForAvoidance.Contains(d));
                                if (overlaps) score *= 0.5; // Penalize
                            }
                        }

                        // Period Preferences
                        bool currentBlockSatisfiesMustHave = false; // Track for current block
                        foreach (var periodPref in prefs.PeriodPreferences)
                        {
                            bool monthsMatch = workDays.Any(d => periodPref.Months.Contains(d.Month));
                            int blockDuration = workDays.Count; // This is the total number of workdays in the block

                            if (monthsMatch && blockDuration >= periodPref.MinDuration)
                            {
                                if (periodPref.Type == PlanningPreferencesDialog.PreferenceType.MustHave)
                                {
                                    score += 10000; // Strong boost for mandatory periods
                                    currentBlockSatisfiesMustHave = true;
                                }
                                else if (periodPref.Type == PlanningPreferencesDialog.PreferenceType.NiceToHave)
                                {
                                    score *= 1.5; // Boost for desired periods
                                }
                            }
                        }
                        
                        // Bridge Day Maximization (Efficiency focus)
                        if (prefs.PreferBridgeDays)
                        {
                            // Further boost highly efficient blocks
                            if (efficiency >= 2.0) score *= 1.2;
                        }

                        if (score > 0)
                        {
                            opportunities.Add(new BridgeOpportunity
                            {
                                VacationDays = workDays,
                                FreeDaysGained = workDays.Count + freeDaysBefore + freeDaysAfter,
                                Cost = cost,
                                Score = score,
                                HasSatisfiedMustHave = currentBlockSatisfiesMustHave
                            });
                        }
                    }
                    currentDate = tempDate;
                    continue;
                }
            }
            currentDate = currentDate.AddDays(1);
        }

        // 4. Select Best Opportunities (Smart Portfolio Strategy)
        var sortedOpportunities = opportunities
            .Where(o => o.VacationDays.Any())
            .OrderByDescending(o => o.Score)
            .ToList();

        // Filter out opportunities that don't satisfy any MustHave preference if MustHave preferences exist
        if (prefs.PeriodPreferences.Any(p => p.Type == PlanningPreferencesDialog.PreferenceType.MustHave))
        {
            sortedOpportunities = sortedOpportunities.Where(o => o.HasSatisfiedMustHave).ToList();
        }

        if (!overwrite)
        {
            var selectedDates = _selectedSlots.Select(s => s.Start.Date).ToHashSet();
            sortedOpportunities.RemoveAll(op => op.VacationDays.Any(d => selectedDates.Contains(d)));
        }

        var selectedOpportunities = new List<BridgeOpportunity>();
        decimal remainingVacationDays = vacationDaysToPlan;

        var candidates = sortedOpportunities.ToList();

        // Strategy Flags: Used to ensure a balanced portfolio of trips
        bool hasLongVacation = false; // Aim for at least one block >= 10 days (2 weeks)
        bool hasSummerVacation = false; // Aim for at least one block in Jun/Jul/Aug

        while (candidates.Count > 0 && remainingVacationDays > 0)
        {
            // --- Dynamic Re-Scoring Step ---
            // We recalculate scores in every iteration to react to what we have already picked.
            foreach (var cand in candidates)
            {
                cand.DynamicScore = cand.Score; // Start with the base efficiency/preference score

                // 1. Portfolio Balance: Prioritize a "Main Vacation" (Long Trip) if missing
                // Only boost if the user allows blocks this long
                if (!hasLongVacation && (!prefs.MaxDaysPerBlock.HasValue || prefs.MaxDaysPerBlock.Value >= 10))
                {
                    // If this candidate offers a long trip (>= 8 work days usually means ~12-16 days total with weekends), boost it.
                    if (cand.VacationDays.Count >= 8) 
                    {
                        cand.DynamicScore *= 1.35; // Significant boost (35%) to ensure we get a main holiday
                    }
                }

                // 2. Seasonal Balance: Prioritize Summer if missing
                // (Only applies if no specific "MustHave" period preferences are overriding this)
                bool hasMustHaveConstraints = prefs.PeriodPreferences.Any(p => p.Type == PlanningPreferencesDialog.PreferenceType.MustHave);
                if (!hasSummerVacation && !hasMustHaveConstraints)
                {
                    var midPoint = cand.VacationDays[cand.VacationDays.Count / 2];
                    if (midPoint.Month is >= 6 and <= 8) 
                    {
                        cand.DynamicScore *= 1.15; // 15% Boost for summer vibes
                    }
                }

                // 3. Distribution/Spacing Logic (if enabled)
                // Penalize candidates that are too close to already selected trips
                if (prefs.DistributeEvenly && selectedOpportunities.Any())
                {
                    var candDate = cand.VacationDays.First();
                    // Find the gap to the closest selected vacation
                    var minDistance = selectedOpportunities.Min(s => Math.Abs((s.VacationDays.First() - candDate).Days));

                    if (minDistance < 60) // Within ~2 months
                    {
                        cand.DynamicScore *= 0.2; // Heavy penalty (80% reduction)
                    }
                    else if (minDistance < 90) // Within ~3 months
                    {
                        cand.DynamicScore *= 0.7; // Moderate penalty (30% reduction)
                    }
                    // Else: No penalty
                }
            }

            // Re-sort based on the new dynamic context
            candidates = candidates.OrderByDescending(o => o.DynamicScore).ToList();
            
            if (!candidates.Any()) break;

            var bestOp = candidates.First();
            candidates.RemoveAt(0);

            // Attempt to add the best candidate
            if (bestOp.Cost <= remainingVacationDays)
            {
                // Check for overlapping dates (just in case logic above missed something or for sanity)
                bool overlaps = selectedOpportunities.Any(s => s.VacationDays.Intersect(bestOp.VacationDays).Any());
                
                if (!overlaps)
                {
                    selectedOpportunities.Add(bestOp);
                    remainingVacationDays -= bestOp.Cost;

                    // Update Strategy Flags
                    if (bestOp.VacationDays.Count >= 8) hasLongVacation = true;
                    
                    var mid = bestOp.VacationDays[bestOp.VacationDays.Count / 2];
                    if (mid.Month is >= 6 and <= 8) hasSummerVacation = true;
                }
            }
        }

        // 5. Present Results
        if (selectedOpportunities.Any())
        {
            var suggestionBlocks = selectedOpportunities
                .OrderBy(op => op.VacationDays.First())
                .Select(op => new VacationSuggestionBlock
            {
                VacationDays = op.VacationDays,
                FreeDaysGained = op.FreeDaysGained
            }).ToList();

            var result = await DialogService.OpenAsync<SuggestionDialog>("Optimaler Urlaubsplan",
                new Dictionary<string, object> { { "SuggestionBlocks", suggestionBlocks } },
                new DialogOptions { Width = "90vw", Height = "auto", Resizable = true, Draggable = true });

            if (result == true)
            {
                if (overwrite)
                {
                    _selectedSlots.Clear();
                }
                var allSuggestedDays = suggestionBlocks.SelectMany(b => b.VacationDays);
                foreach (var day in allSuggestedDays)
                {
                    if (_selectedSlots.All(s => s.Start.Date != day.Date))
                    {
                        _selectedSlots.Add(new Marking { Start = day.Date, End = day.Date.AddDays(1), Name = "Selected", Type = MarkingType.Selected });
                    }
                }

                UpdateAllCalculations();
                await scheduler.Reload();
            }
        }
        else
        {
            NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Info, Summary = "Kein Vorschlag", Detail = "Es konnten keine passenden Zeiträume für die gewählten Kriterien gefunden werden.", Duration = 4000 });
        }
    }

