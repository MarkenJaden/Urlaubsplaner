                        <RadzenDropDown @bind-Value="_selectedHolidayGroupCode" Data="_holidayGroups" Change="GetAllMarkings" TextProperty="Name.First().Text" ValueProperty="Code" Placeholder="Region/Zone wählen" AllowClear="true" Style="width: 250px; margin-top: 5px;" />
                    }
                </RadzenStack>
            </RadzenStack>
