                            <RadzenSplitButtonItem Text="CSV" Icon="grid_on" Value="csv" />
                            <RadzenSplitButtonItem Text="JSON" Icon="data_object" Value="json" />
                            <RadzenSplitButtonItem Text="In Zwischenablage (Text)" Icon="content_copy" Value="clipboard" />
                            <RadzenSplitButtonItem Text="Drucken / PDF" Icon="print" Value="print" />
