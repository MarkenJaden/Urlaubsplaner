        { "HH", ["Hamburg", "Hansestadt Hamburg"] },
        { "HE", ["Hessen", "Hesse"] },
        { "MV", ["Mecklenburg-Vorpommern", "MeckPomm", "MVP"] },
        { "NI", ["Niedersachsen", "Lower Saxony"] },
        { "NW", ["Nordrhein-Westfalen", "NRW", "North Rhine-Westphalia"] },
        { "RP", ["Rheinland-Pfalz", "RLP", "Rhineland-Palatinate"] },
