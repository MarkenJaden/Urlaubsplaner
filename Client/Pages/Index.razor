    decimal _plannedDays;
    int _remainingWorkDays;

    readonly List<Marking> _markings = [];
    readonly List<Marking> _selectedSlots = [];
    readonly List<Marking> _gleittage = [];

    static readonly Dictionary<string, string[]> SubdivisionAbbreviations = new()
    {
        { "BW", ["Baden-Württemberg", "Baden Wuerttemberg"] },
        { "BY", ["Bayern", "Bavaria"] },
        { "BE", ["Berlin"] },
        { "BB", ["Brandenburg"] },
