    <meta name="twitter:image" content="@(NavigationManager.ToAbsoluteUri("images/logo.png"))" />

    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "WebApplication",
          "name": "Urlaubsplaner",
          "applicationCategory": "ProductivityApplication",
          "operatingSystem": "Web",
          "inLanguage": "de",
          "description": "Brueckentage, Feiertage und Urlaubstage intelligent kombinieren - fuer mehr freie Tage.",
          "url": "@NavigationManager.Uri"
        }
    </script>

    <base href="@NavigationManager.BaseUri" />
    <RadzenTheme @rendermode="@InteractiveAuto" Theme="material3" />
    <link rel="stylesheet" href="css/site.css" />
    <link rel="icon" href="favicon.ico" />
    <link rel="apple-touch-icon" href="images/logo.png" />
    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml" />
    <HeadOutlet @rendermode="@InteractiveAuto" />
    <script>
        function isDevice() {
            return /android|webos|iphone|ipad|ipod|blackberry|iemobile|opera mini|mobile/i.test(navigator.userAgent);
        }

        window.downloadFileFromStream = async (fileName, mimeType, contentBase64) => {
            const blob = await (await fetch(`data:${mimeType};base64,${contentBase64}`)).blob();
            const url = URL.createObjectURL(blob);
            const anchorElement = document.createElement('a');
            anchorElement.href = url;
            anchorElement.download = fileName ?? '';
            anchorElement.click();
            anchorElement.remove();
            URL.revokeObjectURL(url);
        }

        window.setupSlotHover = (dotNetHelper) => {
            document.addEventListener('mouseover', (e) => {
                // Find closest slot
                const slot = e.target.closest('.rz-slot');
                if (slot) {
                    const title = slot.getAttribute('title');
                    // Invoke only if changed to avoid spam? No, Debounce handled by Blazor maybe?
                    // We just send what we found.
                    dotNetHelper.invokeMethodAsync('OnSlotHover', title || "");
                } else {
                    // Only clear if we moved OUT of a slot to something else? 
                    // Or maybe don't spam empty strings.
                    // Let's just send "" if not over a slot? No, that clears it too often.
                    // We only want to detect hover over slots.
                }
            });
        };
    </script>
    <script defer src="https://umami.urlaubsplaner.me/script.js" data-website-id="8af961da-2d2b-4cb2-9cb4-8e40fe7ef2d1"></script>
</head>

<body>
    <div id="app-loading" style="position: fixed; inset: 0; z-index: 99999; display: grid; place-items: center; background: radial-gradient(circle at 30% 20%, rgba(255, 193, 7, 0.18), transparent 45%), radial-gradient(circle at 70% 70%, rgba(33, 150, 243, 0.12), transparent 50%), #fbfbfc;">
        <div style="width: min(520px, 92vw); padding: 20px 18px; border-radius: 16px; border: 1px solid rgba(0,0,0,0.08); background: rgba(255,255,255,0.88); backdrop-filter: blur(6px);">
            <div style="display: flex; align-items: center; gap: 12px;">
                <img src="images/logo.png" alt="Urlaubsplaner" style="width: 42px; height: 42px; object-fit: contain;" />
                <div style="line-height: 1.2;">
                    <div style="font-weight: 700; font-size: 1.05rem; color: #1f2d3d;">Urlaubsplaner wird geladen</div>
                    <div style="font-size: 0.9rem; color: #5b6776; margin-top: 2px;">Assemblies werden heruntergeladen â€¦</div>
                </div>
            </div>
            <div style="height: 10px; width: 100%; background: rgba(0,0,0,0.08); border-radius: 999px; overflow: hidden; margin-top: 14px;">
                <div style="height: 100%; width: 35%; background: linear-gradient(90deg, #ffb300, #ff7043, #29b6f6); border-radius: 999px; animation: loadingBar 1.1s ease-in-out infinite alternate;"></div>
            </div>
        </div>
    </div>

    <style>
        @@keyframes loadingBar {
            from { transform: translateX(-10%); width: 30%; opacity: 0.75; }
            to   { transform: translateX(130%); width: 45%; opacity: 1; }
        }

        #app-loading.is-hidden {
            opacity: 0;
            pointer-events: none;
            transition: opacity 260ms ease;
        }
    </style>

    <Routes @rendermode="@InteractiveAuto" />

    <script>
        (function () {
            function hide() {
                var el = document.getElementById('app-loading');
                if (!el) return;
                el.classList.add('is-hidden');
                window.setTimeout(function () { el.remove(); }, 350);
            }

            // Hide when the Blazor runtime is ready.
            window.__urlaubsplanerHideLoading = hide;
        })();
    </script>

    <script src="_framework/blazor.web.js" autostart="false"></script>
    <script>
        Blazor.start().then(function () {
            if (window.__urlaubsplanerHideLoading) {
                window.__urlaubsplanerHideLoading();
            }
        });
    </script>

    <script src="_content/Radzen.Blazor/Radzen.Blazor.js?v=@(typeof(Radzen.Colors).Assembly.GetName().Version)"></script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; }

    [Inject]
    private ThemeService ThemeService { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        if (HttpContext != null)
        {
            var theme = HttpContext.Request.Cookies["UrlaubsplanerTheme"];

            if (!string.IsNullOrEmpty(theme))
            {
                ThemeService.SetTheme(theme, false);
            }
        }
    }
}
