                if (slot) {
                    const title = slot.getAttribute('title');
                    // Invoke only if changed to avoid spam? No, Debounce handled by Blazor maybe?
                    // We just send what we found.
                    dotNetHelper.invokeMethodAsync('OnSlotHover', title || "");
                } else {
                    // Only clear if we moved OUT of a slot to something else? 
                    // Or maybe don't spam empty strings.
                    // Let's just send "" if not over a slot? No, that clears it too often.
                    // We only want to detect hover over slots.
                }
            });
        };
